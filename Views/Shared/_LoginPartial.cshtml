@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    // Get user data once to avoid multiple async calls
    ApplicationUser? user = null;
    if (SignInManager.IsSignedIn(User))
    {
        user = await UserManager.GetUserAsync(User);
    }
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User) && user != null)
    {
        <li class="nav-item" style="align-self: center;">
            @if (user.ProfilePicture != null)
            {
                <img style="width:40px;height:40px; object-fit:cover; border-radius:30px"
                     src="data:image/*;base64,@(Convert.ToBase64String(user.ProfilePicture))"
                     alt="Profile Picture">
            }
            else if (User.HasClaim(c => c.Type == "picture"))
            {
                <!-- Fallback to Google profile picture if available -->
                <img style="width:40px;height:40px; object-fit:cover; border-radius:30px"
                     src="@User.FindFirst("picture")?.Value"
                     alt="Google Profile Picture">
            }
        </li>

        <li class="nav-item">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello @user.UserName!
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <!-- Keep modal for local logins, but add direct link for external logins -->
            <a class="nav-link btn-login" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn-register" href="#" data-bs-toggle="modal" data-bs-target="#registerModal">Register</a>
        </li>
        <!-- Optional: Add direct Google login button -->
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/ExternalLogin" asp-route-provider="Google" asp-route-returnUrl="@Context.Request.Path" method="post">
                <button type="submit" class="nav-link btn btn-link border-0" name="provider" value="Google">
                    <i class="fab fa-google"></i> Google Login
                </button>
            </form>
        </li>
    }
</ul>